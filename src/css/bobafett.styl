.bobafett
  background gold2
  height 200px
  width 200px
  border-radius 100px 100px 10px 10px
  position relative
  z-index 1
  box-shadow inset 0 10px 10px rgba(#fff, .5), inset 0 1px 0 #000
  transition transform .3s
  cursor pointer
  user-select none
  outline none
  &:hover
    transform scale(1.2)
  &:active
    transform scale(1)
    .radio
      height 10px
      top 15px
      z-index 11
      transform rotate(5deg)
      &:before
        transform scale(1.5) translate(10px, 5px)
      &:after
        opacity 1
        transition opacity 1s
        transition-delay .5s
  &:before,
  &:after
    content ''
    display block
    background gold1
    box-shadow inset 10px -5px 10px rgba(#000, .3)
    height 100px
    width 120px
    position absolute
    border-radius 150px 200px 0 0
    left 20px
    bottom -55px
    transform rotate(45deg)
    z-index 1
  &:after
    border-radius 200px 150px 0 0
    box-shadow inset -10px -5px 10px rgba(#000, .3)
    left auto
    right 20px
    transform rotate(-45deg)

.arrows
  position absolute
  top -35px
  left 7px
  width calc(100% - 14px)
  height 2px
  background rgba(#000, .2)
  box-shadow 0 1px rgba(#fff, .5)
  z-index 11
  &:before,
  &:after
    content ''
    display block
    width 1px
    height 1px
    border 7px solid transparent
    border-left 7px solid rgba(#000, .3)
    top 10px
    position absolute
    left calc(50% - 14px)
  &:before
    transform translateX(20px)
  &:after
    border-left 7px solid transparent
    border-right 7px solid rgba(#000, .3)    
    transform translateX(-10px)

