.viewfinder
  width 100%
  position absolute
  top 90px
  z-index 10
  &:before,
  &:after
    content ''
    display block
    height 100px
    width 15px
    box-shadow inset 0 0 10px rgba(#000, .3), inset 0 0 0 1px rgba(#000, .2)
    background gold1
    position absolute
    left -15px
    top 0
    border-radius 10px 10px 0 10px
    z-index 10
  &:after
    border-radius 10px 10px 10px 0
    left auto
    right -15px
.radio
  height 100px
  width 5px
  background #aaa
  position absolute
  top -99px
  left -10px
  border-radius 50px 50px 0 0
  border 1px solid #666
  transition .5s all
  &:before
    content ''
    display block
    background gold1
    width 50px
    height 20px
    border-bottom-right-radius 100px
    position absolute
    top -10px
    transform translateX(-1px)
    box-shadow inset -5px -2px 0 rgba(#fff, .5), inset 5px 2px 0 rgba(#fff, .2)
    transition .5s all
  &:after
    content ''
    display block
    width 10px
    height 10px
    border-radius 100px
    background red
    transform translateX(45px)
    opacity 0
    transition opacity 0s
    box-shadow inset 0 0 0 2px #fff, 0 0 10px 4px #f00