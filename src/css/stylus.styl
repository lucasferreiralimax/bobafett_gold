@import '_variable'

body
  display flex
  align-items center
  justify-content space-between
  flex-direction column
  height 100vh
  background url('https://i.imgur.com/40E7NAQ.jpg') no-repeat
  background-size cover
  min-height 500px
  padding 1em

footer
  padding 2em

cite
  font-size 2em
  padding 1em 1em 2em
  text-shadow 0 0 10px #fff, 0 0 10px #fff, 0 0 10px #fff
  border-radius 20px 20px 0 0
  background linear-gradient(#fff, transparent)
  user-select none
  small
    font-size 18px

.bobafett
  background gold2
  height 200px
  width 200px
  border-radius 100px 100px 10px 10px
  position relative
  z-index 1
  box-shadow inset 0 10px 10px rgba(#fff, .5), inset 0 1px 0 #000
  transition transform .3s
  cursor pointer
  user-select none
  outline none
  &:hover
    transform scale(1.2)
  &:active
    transform scale(1)
    .radio
      height 10px
      top 15px
      z-index 11
      transform rotate(5deg)
      &:before
        transform scale(1.5) translate(10px, 5px)
      &:after
        opacity 1
        transition opacity 1s
        transition-delay .5s
  &:before,
  &:after
    content ''
    display block
    background gold1
    box-shadow inset 10px -5px 10px rgba(#000, .3)
    height 100px
    width 120px
    position absolute
    border-radius 150px 200px 0 0
    left 20px
    bottom -55px
    transform rotate(45deg)
    z-index 1
  &:after
    border-radius 200px 150px 0 0
    box-shadow inset -10px -5px 10px rgba(#000, .3)
    left auto
    right 20px
    transform rotate(-45deg)
.eye,
.eye .piece
  background eyeOutGlass
  border-radius 0 0 35% 35%
  height 40px
  width 200px
  margin 0 auto
  transform translateY(100px)
  z-index 10
  position relative
  box-shadow 0 -10px 10px rgba(#fff, .2)
  &:before
    content ''
    display block
    background eyeOutGlass
    height 152px
    transform translateY(32px)
    border-radius 0 0 45px 45px
    width 65px
    margin 0 auto
    z-index 1
  .piece
    background #000
    height 20px
    width 180px
    border-radius 0 0 100% 100%
    position absolute
    left calc(50% - 90px)
    top -90px
    box-shadow inset 0 1px 0 rgba(#fff, .7)
    &:before
      transform translateY(1px)
      height 174px
      border-radius 10px
      width 35px
      background #000
.eye
  box-shadow inset 0 0 5px 2px rgba(#000, .4), 0 1px 0 1px rgba(#fff, .7)
.arrows
  position absolute
  top -35px
  left 7px
  width calc(100% - 14px)
  height 2px
  background rgba(#000, .2)
  box-shadow 0 1px rgba(#fff, .5)
  z-index 11
  &:before,
  &:after
    content ''
    display block
    width 1px
    height 1px
    border 7px solid transparent
    border-left 7px solid rgba(#000, .3)
    top 10px
    position absolute
    left calc(50% - 14px)
  &:before
    transform translateX(20px)
  &:after
    border-left 7px solid transparent
    border-right 7px solid rgba(#000, .3)    
    transform translateX(-10px)
.viewfinder
  width 100%
  position absolute
  top 90px
  z-index 10
  &:before,
  &:after
    content ''
    display block
    height 100px
    width 15px
    box-shadow inset 0 0 10px rgba(#000, .3), inset 0 0 0 1px rgba(#000, .2)
    background gold1
    position absolute
    left -15px
    top 0
    border-radius 10px 10px 0 10px
    z-index 10
  &:after
    border-radius 10px 10px 10px 0
    left auto
    right -15px
.radio
  height 100px
  width 5px
  background #aaa
  position absolute
  top -99px
  left -10px
  border-radius 50px 50px 0 0
  border 1px solid #666
  transition .5s all
  &:before
    content ''
    display block
    background gold1
    width 50px
    height 20px
    border-bottom-right-radius 100px
    position absolute
    top -10px
    transform translateX(-1px)
    box-shadow inset -5px -2px 0 rgba(#fff, .5), inset 5px 2px 0 rgba(#fff, .2)
    transition .5s all
  &:after
    content ''
    display block
    width 10px
    height 10px
    border-radius 100px
    background red
    transform translateX(45px)
    opacity 0
    transition opacity 0s
    box-shadow inset 0 0 0 2px #fff, 0 0 10px 4px #f00
    